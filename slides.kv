<Label>:
    color: (0, 0, 0, 1)

<Slide@BoxLayout>:
    orientation: 'vertical'


<Title@Label>:
    size_hint_y: 0.2
    font_size: 70

<Body@BoxLayout>:
    size_hint_y: 0.8
    padding: [20, 100, 0, 100]
    spacing: 20


<BodyImage@Image>:
    allow_stretch: True


<TextSlide@Slide>:
    title: ""
    content: ""

    Title:
        text: root.title

    Label:
        text: root.content
        size_hint_y: 0.8
        font_size: 55


<LabelSlide@Label>:
    font_size: 70


<VideoSlide@Slide>:
    title: ""
    source: ""
    padding: [100, 0]

    Title:
        text: root.title

    VideoPlayer:
        source: root.source
        state: "stop"


