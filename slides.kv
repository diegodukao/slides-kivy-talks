<Label>:
    color: (0, 0, 0, 1)

<Slide@BoxLayout>:
    orientation: 'vertical'


<Title@Label>:
    size_hint_y: 0.2
    font_size: 70

<ContentText@Label>:
    font_size: 55

<Body@BoxLayout>:
    size_hint_y: 0.8
    padding: [20, 100, 0, 100]
    spacing: 20

<BodyRightHalf@BoxLayout>:
    orientation: 'vertical'
    padding: [0, 0, 100, 0]

<BodyGrid@GridLayout>:
    size_hint_y: 0.8
    padding: [20, 100, 0, 100]
    spacing: 20


<BodyImage@Image>:
    allow_stretch: True


<TextSlide@Slide>:
    title: ""
    content: ""

    Title:
        text: root.title

    ContentText:
        text: root.content
        size_hint_y: 0.8


<LabelSlide@Label>:
    font_size: 70


<VideoSlide@Slide>:
    title: ""
    source: ""
    padding: [100, 0]

    Title:
        text: root.title

    VideoPlayer:
        source: root.source
        state: "stop"

<ImageTitle@BoxLayout>:
    orientation: "vertical"
    title: ""
    source: ""

    Label:
        text: root.title
        font_size: 50
        size_hint_y: .2
    Image:
        source: root.source
        size_hint_y: .8
        allow_stretch: True


