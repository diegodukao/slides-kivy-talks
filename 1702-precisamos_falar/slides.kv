        source: "imgs/cover.png"

    LabelSlide:
        text: "Kivy não é *só* para celulares"

    TextSlide:
        title: "O que é Kivy?"
        content:
            '''
            Biblioteca gráfica multiplataforma para fazer interface
            visual para o seu aplicativo Python. (beijos, pygtk)
            '''

    Slide:
        Title:
            text: "Hello World"
        Body:
            BodyImage:
                source: "imgs/helloworld.png"
            BodyImage:
                source: "imgs/blank.png"

    Slide:
        Title:
            text: "Widgets"
        Body:
            ContentText:
                text:
                    '''
                    - ActionBar
                    - Label
                    - ToggleButton
                    - CodeInput
                    - FileBrowser
                    '''
            BodyRightHalf:
                ActionBar:
                    ActionView:
                        ActionPrevious:
                            title: 'Slides PythonRio'
                            with_previous: False
                Label:
                    text: "Label"
                    size_hint_y: .05
                ToggleButton:
                    text: "Toggle Button"
                    size_hint_y: .1
                CodeInput:
                    lexer: PythonLexer()
                    text: "def olar(): print('olar mundo!')"
                FileChooserListView:
                    id: filechooser
                    rootpath: '/home/diego/Projects/'

    Slide:
        Title:
            text: "Criando a interface"
        Body:
